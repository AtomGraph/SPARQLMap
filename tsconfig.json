{
    "compilerOptions": {
        "strict": true,
        "outDir": "./build",
        "sourceMap": true,
        "target": "es6",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
          "@atomgraph/SPARQLBuilder/*": ["../sparql-builder/src/*"],
          "@atomgraph/URLBuilder/*": ["../URLBuilder/src/*"],
        },
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}